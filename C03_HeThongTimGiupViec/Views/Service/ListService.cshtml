@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@using C03_HeThongTimGiupViec.Models;
@model List<Service>

<div class="job-container bg-white">
    <div class="container py-common d-flex flex-column gap-5">
        <form class="d-flex">
            <input class="form-control me-2" type="search" placeholder="Search by name..." aria-label="Search">
            <input class="form-control me-2" type="search" placeholder="Search by address..." aria-label="Search">
            <button class="btn btn-outline-success" type="button">Search</button>
        </form>
        <div class="row gx-4 gy-4">
            @foreach (Service s in Model)
            {
                <div class="col-lg-4 col-md-6 col-sm-12">
                    <div class="col-content">
                        <div class="">
                            <h4>@s.ServiceName</h4>
                        </div>
                        <p>@s.Description</p>
                        <div class="d-flex justify-content-end align-items-center">
                            <a href="/service/DetailService?id=@s.ServiceId" class="btn-showmore">View more</a>
                        </div>
                    </div>
                </div>
            }
        </div>
        <nav aria-label="Page navigation example">
            <ul class="pagination">
                <li class="page-item"><a class="page-link" href="#">Previous</a></li>
                <li class="page-item active"><a class="page-link" href="#">1</a></li>
                <li class="page-item"><a class="page-link" href="#">2</a></li>
                <li class="page-item"><a class="page-link" href="#">3</a></li>
                <li class="page-item"><a class="page-link" href="#">Next</a></li>
            </ul>
        </nav>
    </div>
</div>