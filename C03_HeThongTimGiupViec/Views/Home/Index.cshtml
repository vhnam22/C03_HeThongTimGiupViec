@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@using C03_HeThongTimGiupViec.Models;

<div class="home-page">
    <div class="job-container">
        <div class="container py-common">
            <h3 class="title-page">Recent Job Circulars</h3>
            <p class="subtitle-page">Many desktop publishing packages and web page editors</p>
            <div class="row gx-5 gy-5">

                @foreach (Service s in ViewBag.services)
                {
                    <div class="col-lg-4 col-md-6 col-sm-12">
                        <div class="col-content">
                            <div class="">
                                <h4>@s.ServiceName</h4>
                                @*<p>Address: @p.Address</p>*@
                            </div>
                            <p>@s.Description </p>
                            <div class="d-flex justify-content-between align-items-center">
                                <button class="btn-showmore">View more</button>
                            </div>
                        </div>
                    </div>
                }
            </div>
        </div>
    </div>

    <div class="housekeeper-container">
        <div class="container py-common">
            <h3 class="title-page">Best Housemaid</h3>
            <p class="subtitle-page">Many desktop publishing packages and web page editors</p>
            <div class="row gx-5 gy-5">
                @foreach (Account acc in ViewBag.accounts)
                {
                    <div class="col-xl-3 col-lg-4 col-md-6 col-sm-12">
                        <div class="col-content">
                            <div style="aspect-ratio: 1 / 1;">
                                <img src="/Images/@acc.ProfilePicture" alt="" style="width:100%; height: 100%; object-fit:cover" />
                            </div>
                            <div class="d-flex flex-column align-items-center">
                                <h4>@acc.FullName</h4>
                                <p>Address: @acc.Address</p>
                            </div>

                            <div class="d-flex justify-content-center">
                                <button class="btn-showmore">View Profile</button>
                            </div>
                        </div>
                    </div>
                }
            </div>
        </div>
    </div>
    <div class="post-container">
        <div class="container py-common">
            <h3 class="title-page">New Post</h3>
            <p class="subtitle-page">Many desktop publishing packages and web page editors</p>
            <div class="row gx-5 gy-5">
                @foreach (Post p in ViewBag.posts)
                {
                    <div class="col-lg-4 col-md-6 col-sm-12">
                        <div class="col-content">
                            <div class="d-flex justify-content-start align-items-center gap-4">
                                <img src="~/Images/@p.Account.ProfilePicture" alt="" style="width:75px;" />
                                <div class="d-flex flex-column align-items-start">
                                    <h5>@p.Account.FullName</h5>
                                    <p>Address: @p.Address</p>
                                </div>
                            </div>
                            <div class="post-date d-flex gap-1 align-items-center ">
                                <svg width="20px" height="20px" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
                                    <path d="M10 13L14 17M14 13L10 17M3 9H21M7 3V5M17 3V5M6.2 21H17.8C18.9201 21 19.4802 21 19.908 20.782C20.2843 20.5903 20.5903 20.2843 20.782 19.908C21 19.4802 21 18.9201 21 17.8V8.2C21 7.07989 21 6.51984 20.782 6.09202C20.5903 5.71569 20.2843 5.40973 19.908 5.21799C19.4802 5 18.9201 5 17.8 5H6.2C5.0799 5 4.51984 5 4.09202 5.21799C3.71569 5.40973 3.40973 5.71569 3.21799 6.09202C3 6.51984 3 7.07989 3 8.2V17.8C3 18.9201 3 19.4802 3.21799 19.908C3.40973 20.2843 3.71569 20.5903 4.09202 20.782C4.51984 21 5.07989 21 6.2 21Z" stroke="#656565" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" />
                                </svg>
                                <div>
                                @p.PostDate
                                </div>
                            </div>
                            <div class="title">
                                @p.Title
                            </div>
                            <div class="des">
                                <p> @p.Description </p>
                            </div>
                            <div class="d-flex gap-1 justify-content-end align-items-center">
                                <svg fill="#656565" width="20px" height="20px" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg"><path d="M2,11.308a1,1,0,0,0,.293.707l9.692,9.692a1,1,0,0,0,1.414,0L21.707,13.4a1,1,0,0,0,0-1.414L12.015,2.293A1,1,0,0,0,11.308,2H3A1,1,0,0,0,2,3ZM4,4h6.894l8.692,8.692-6.894,6.894L4,10.894ZM9.923,7.154a1.958,1.958,0,1,1-2.769,0A1.957,1.957,0,0,1,9.923,7.154Z" /></svg>
                                <div class="price">@p.Price đ</div>
                            </div>
                        </div>
                    </div>
                }
            </div>

        </div>
    </div>
</div>
