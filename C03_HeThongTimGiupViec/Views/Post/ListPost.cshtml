@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@using C03_HeThongTimGiupViec.Models;

<div class="post-container bg-white">
    <div class="container py-common d-flex flex-column gap-5">
        <form class="d-flex">
            <input class="form-control me-2" type="search" placeholder="Search by name..." aria-label="Search">
            <input class="form-control me-2" type="search" placeholder="Search by address..." aria-label="Search">
            <button class="btn btn-outline-success" type="button">Search</button>
        </form>
        <div class="row gx-4 gy-4">
            @foreach(Post p in ViewBag.posts)
            {
                <div class="col-lg-4 col-md-6 col-sm-12">
                    <a href="/post/DetailPost?id=@p.PostId" class="text-decoration-none">
                        <div class="col-content">
                            <div class="row gx-3">
                                <div class="col-4">
                                    <img src="~/Images/@p.Account.ProfilePicture" alt="" style="width:100%; height: 100%" />
                                </div>
                                <div class="col-8">
                                    <div class="d-flex flex-column align-items-start">
                                        <h5>@p.Account.FullName</h5>
                                        <p>Address: @p.Address</p>
                                    </div>
                                </div>
                            </div>
                            <div class="des">
                                <p> @p.Description </p>
                            </div>
                        </div>
                    </a>
                </div>
            }
        </div>
        <nav aria-label="Page navigation example">
            <ul class="pagination">
                <li class="page-item"><a class="page-link" href="#">Previous</a></li>
                <li class="page-item active"><a class="page-link" href="#">1</a></li>
                <li class="page-item"><a class="page-link" href="#">2</a></li>
                <li class="page-item"><a class="page-link" href="#">3</a></li>
                <li class="page-item"><a class="page-link" href="#">Next</a></li>
            </ul>
        </nav>
    </div>
</div>